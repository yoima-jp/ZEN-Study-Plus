{
  "manifest_version": 3,
  "name": "ZEN Study Plus",
  "version": "1.6",
  "description": "ZEN Studyの授業の残り時間とテストの個数などがわかります。",
  "permissions": ["activeTab", "storage", "tabs", "notifications", "unlimitedStorage", "scripting"],
  "host_permissions": ["https://www.nnn.ed.nico/*", "https://zsp.yoima.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "welcome/welcome.html",
  "content_scripts": [
    {
      "matches": ["https://www.nnn.ed.nico/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://www.nnn.ed.nico/*"],
      "js": ["additional.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "audio/notification.mp3",
        "images/notification_icon.png",
        "html2canvas.min.js",
        "update_notification/*"
      ],
      "matches": ["<all_urls>", "https://www.nnn.ed.nico/*"]
    }
  ]
}